{
  "rulesDirectory": ["tslint-plugin-prettier"],
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier",
    "tslint-config-airbnb"
  ],
  "linterOptions": {
    "exclude": ["node_modules/**/*.ts", "**/*.css.d.ts"]
  },
  "rules": {
    "prettier": [
      true,
      {
        "printWidth": 120,
        "tabWidth": 2,
        "singleQuote": true,
        "trailingComma": "none",
        "semi": false
      }
    ],
    "ter-indent": [
      true,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "semicolon": [true, "never"],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore",
      "allow-pascal-case"
    ],
    "trailing-comma": [true, "never"],
    "max-line-length": [true, 120],
    "ter-arrow-parens": [false, "never"],
    "no-non-null-assertion": true,
    "interface-name": [true, "never-prefix"],
    "import-name": false,
    "no-console": false
  }
}
